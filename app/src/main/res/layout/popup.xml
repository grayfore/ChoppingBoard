<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="1dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Order Example"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="1dp"
        android:text="Order EC54678"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/ordertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="1dp"
        android:text="Order Time: 12:40pm"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_below="@+id/orderid"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Name: Jeffery Cui"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="italic"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Delivery Address: 123 fake street"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="italic"
        android:layout_below="@id/name"/>
    <TextView
        android:id="@+id/custnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Customer Number: 434-123-4567"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="italic"
        android:layout_below="@+id/add"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custnum"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/listorderd">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orderItems"
        android:stretchColumns="1"
        >

    </TableLayout>
    </ScrollView>
</RelativeLayout>
