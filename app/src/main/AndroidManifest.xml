<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.choppingboard.v1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.choppingboard.v1.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.choppingboard.v1.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.choppingboard.v1" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!--
                    <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                    ^MAYBE DEPRACATED!!
                -->

                <category android:name="com.choppingboard.v1.example" />
            </intent-filter>
        </receiver>

        <service android:name=".GCMNotificationIntentService" />
        <service android:name=".RegistrationIntentService" />
        <service android:name=".UpdateStatus" />

        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DashBoard"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SeeScreen"
            android:label="@string/title_activity_see_screen"
            android:parentActivityName=".DashBoard"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.choppingboard.v1.DashBoard" />
        </activity>
        <activity
            android:name=".BuildScreen"
            android:label="@string/title_activity_build_screen"
            android:parentActivityName=".DashBoard"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.choppingboard.v1.DashBoard" />
        </activity>
        <activity
            android:name=".RegisterScreen"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CusCreateScreen"
            android:label="@string/title_activity_cus_create_screen"
            android:parentActivityName=".BuildScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.choppingboard.v1.BuildScreen" />
        </activity>
        <activity
            android:name=".ResMenuActivity"
            android:label="@string/title_activity_res_menu"
            android:parentActivityName=".CusCreateScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.choppingboard.v1.CusCreateScreen" />
        </activity>
        <activity
            android:name=".MenuExpand"
            android:label="@string/title_activity_menu_expand" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.choppingboard.v1.ResMenuActivity" />
        </activity>
    </application>

</manifest>
